@model Car
    <hr />
    <div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.PetName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.PetName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MakeNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MakeNavigation.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Color)
            </dt>
            <dd class="col-sm-10" style="color:@Model.Color">
                @Html.DisplayFor(m => m.Color)
            </dd>

        </dl>
    </div>